{% include "@droplets/header.lte" %}
{% autoescape false %}
  <h2 class="ui blue header">{{ MOD_DROPLETS['Manage backups'] }}</h2>
  <a href="{{ ADMIN_URL}}/admintools/tool.php?tool=droplets">&laquo; {{ MOD_DROPLETS['Back to overview'] }} &laquo;</a>
	<div class="ui divider"></div>  
  {% if info is not empty %}<div class="ui blue message">{{ info }}</div>{% endif %}
  
<form method="post" action="{{ action }}" id="droplets_manage_backups">
	<input type="hidden" name="tool" value="droplets" />
	<input type="hidden" name="backups" value="1" />
	
	{% if num_rows == 0 %}
	<div class="ui red message">{{ MOD_DROPLETS['No Backups found'] }}</div>
	{% else %}	

	<table class="ui celled padded striped table">
		<thead>
			<tr>
				<th>{{ MOD_DROPLETS['Actions'] }}</th>
				<th>{{ MOD_DROPLETS['Name'] }}</th>
				<th>{{ MOD_DROPLETS['Size'] }} (Byte)</th>
				<th>{{ MOD_DROPLETS['Date'] }}</th>
				<th>{{ MOD_DROPLETS['Files'] }}</th>
			</tr>
		</thead>
		<tbody>
		{% for item in rows %}
			<tr>
				<td>
				<input type="checkbox" name="markeddroplet[]" id="markeddroplet_{{ item.name }}" value="{{ item.name }}" />
				<a href="#" onclick="droplets_set_action('delbackup', '{{ item.name }}');" title="{{ TEXT.DELETE }}"><i class="large red remove icon"></i></a>
				<a href="#" onclick="droplets_set_action('recover','{{ item.name }}');" title="{{ MOD_DROPLET ['Import'] }}"><i class="large green download icon"></i></a>					  
				<a href="#" class="tooltip"><i class="large info circle icon" title="{{ MOD_DROPLETS['List contained files'] }}"></i><span class="comment">{{ MOD_DROPLETS['Contained files'] }}:<br />{{ item.listfiles }}</span></a>			  				  
				</td>
				<td>
				  <a href="{{ item.download }}" title="{{ MOD_DROPLETS['Download']}}">{{ item.name }}</a>
				</td>
				<td>{{ item.size }}</td>
				<td>{{ item.date }}</td>
				<td>{{ item.files }}</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
	<div class="ui hidden divider"></div>
		
	<div class="ui one column grid"><!-- start submit -->
		<div class="row">				
						
			<div class="column">
				<div class="inline fields">				
					<label>{{ MOD_DROPLETS['marked'] }}:</label>
						<button class="negative ui button lepsem_submit" type="submit" name="delete">{{ TEXT['DELETE'] }}</button>													
				</div>
			</div>	

		</div>
	</div> <!-- end submit -->
	<div class="ui hidden divider"></div>	
</form>
{% endif %}
{% endautoescape %}
{% include "@droplets/footer.lte" %}